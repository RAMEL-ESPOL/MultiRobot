<launch>
    <arg name="markerSize"      default="0.026"/>    <!-- in m -->
    <arg name="side"             default="left"/>
    <arg name="ref_frame"       default="camera_frame"/>  <!-- leave empty and the pose will be published wrt param parent_name -->

    <node pkg="aruco_ros2" exec="marker_publisher" name="aruco_marker_publisher"  output="screen" >
        <remap from="/camera_info" to="/camera/color/camera_info"/>
        <remap from="/image" to="/camera/color/image_raw" /> 
        <param name="image_is_rectified"    type="bool"     value="True"/>
        <param name="marker_size"           type="float"   value="$(var markerSize)"/>
        <param name="reference_frame"       type="str"      value="$(var ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <!-- <param name="camera_frame_"       value="$(var side)_hand_camera"/> -->
    </node>
</launch>

