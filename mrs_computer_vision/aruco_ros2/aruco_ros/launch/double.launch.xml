<launch>

    <arg name="marker1Id"         default="582"/>
    <arg name="marker2Id"         default="26"/>
    <arg name="markerSize"        default="0.04"/>    <!-- in m -->
    <arg name="eye"               default="left"/>
    <arg name="dct_normalization" default="True" />
    <arg name="dct_filter_size"   default="2" />
    <arg name="marker1_frame"     default="marker_hand_frame" />
    <arg name="marker2_frame"     default="marker_object_frame" />


    <node pkg="aruco_ros2" type="double" name="aruco_simple">    
        <remap from="/camera_info" to="/stereo/$(var eye)/camera_info" />
        <remap from="/image" to="/stereo/$(var eye)/image_rect_color" />
        <param name="image_is_rectified"        type="bool"     value="True"/>
        <param name="marker_size"               type="float"            value="$(var markerSize)"/>
        <param name="marker_id1"                type="int"     value="$(var marker1Id)"/>
        <param name="marker_id2"                type="int"     value="$(var marker2Id)"/>
        <param name="normalizeImage"            type="bool"     value="$(var dct_normalization)"/>
        <param name="dct_components_to_remove"  type="int"     value="$(var dct_filter_size)"/>
        <param name="parent_name"               type="str"     value="stereo_gazebo_$(var eye)_camera_optical_frame"/>
        <param name="child_name1"               type="str"     value="$(var marker1_frame)" />
        <param name="child_name2"               type="str"     value="$(var marker2_frame)" />
    </node>

</launch>

